@model Project.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $("#btnSave").click(function () {
            var UserEmail = $("#USerEmail").val();
            var UserName = $("#UserName").val();
            var UserPassword = $("#Password").val();
            var ComformPassword = $("#CfPassword").val();
            var UserPhone = $("#Phone").val();
            var UserAddress = $("#Address").val();
            var UserID = $("#UserID").val();
            var User = {};
            User.UserEmail = UserEmail;
            User.UserName = UserName;
            User.UserPassword = UserPassword;
            User.ComformPassword = ComformPassword;
            User.UserPhone = UserPhone;
            User.UserAddress = UserAddress;
            User.UserID = UserID;

              $.ajax({
            async: true,
            type: 'POST',
            dataType: 'JSON',
            contentType: 'application/json; charset=utf=8',
            url: '@Url.Action("Information", "User")',
            data: JSON.stringify(User),
            success: function (data) {
                alert(data);
            }
            ,
            error: function () {
                alert("error");
            }
        });
        });
    });
</script>
<h4>User</h4>
<hr />


<div class="border border-secondary rounded p-3">
    <div class="form-inline">
        <label class="col-sm-4">User Email</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" value="@Model.UserEmail" id="USerEmail" readonly />
        </div>
    </div>
    <div class="form-inline">
        <label class="col-sm-4">User Name</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" value="@Model.UserName" id="UserName" />
        </div>
    </div>
    <div class="form-inline">
        <label class="col-sm-4">Password</label>
        <div class="col-sm-8">
            <input type="password" class="form-control" value="" id="Password"
                   placeholder="Leave bank if you don't want to change " />
        </div>
    </div>
    <div class="form-inline">
        <label class="col-sm-4">Comfirm Password</label>
        <div class="col-sm-8">
            <input type="password" class="form-control" value="" id="CfPassword" />
        </div>
    </div>
    <div class="form-inline">
        <label class="col-sm-4">Phone</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" value="@Model.UserPhone" id="Phone" required />
        </div>
    </div>
    <div class="form-inline">
        <label class="col-sm-4">Address </label>
        <div class="col-sm-8">
            <input type="text" class="form-control" value="@Model.UserAddress" id="Address" required />
        </div>
    </div>

    <div class="form-inline" style="margin:0 600px">
        <button type="submit" value="Save" class="btn btn-primary m-3" id="btnSave">Save</button>
        
    </div>
    <input type="text" value="@Model.UserID" id="UserID" hidden/>
</div>

<p>
    @Html.ActionLink("Back to List", "Index","Home")
</p>
