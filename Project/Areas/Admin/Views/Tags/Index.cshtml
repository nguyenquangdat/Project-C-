@model IEnumerable<Project.Models.Tags>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    <a href="@Url.Action("ExportToExcel", "Tags")"> Export Excel</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TagName)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TagName)
        </td>
        <td>
            <form action="/Admin/Tags/Delete/@item.TagID" method="post">
                @Html.AntiForgeryToken()
                <a href="/Admin/Tags/Edit/@item.TagID">
                    <i class="fas fa-edit"></i>
                </a>
                <a href="/Admin/Tags/Details/@item.TagID">
                    <i class="fas fa-info-circle"></i>
                </a>
                <button class="bg-transparent border-0" type="submit" onclick="return confirm('Are you sure to delete this post?');">
                    <i class="fas fa-trash-alt"></i>
                </button>
            </form>
        </td>
    </tr>
}

</table>
